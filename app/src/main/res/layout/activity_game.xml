<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_background">

    <LinearLayout
        android:id="@+id/layoutDealerCards"
        android:layout_width="650dp"
        android:layout_height="120dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="212dp"
        android:background="@drawable/custom_border"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/containerDealerCards"
            android:layout_width="60dp"
            android:layout_height="91dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/game_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="261dp"
        android:layout_marginTop="217dp"
        android:layout_marginEnd="262dp"
        android:layout_marginBottom="133dp"
        android:background="@drawable/custom_border"
        android:fontFamily="@font/monofett"
        android:text="@string/menu_title"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="@color/default_text_color"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/deckCard1"
        android:layout_width="91dp"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="225dp"
        android:layout_marginEnd="608dp"
        android:layout_marginBottom="142dp"
        android:layout_weight="1"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/blue_flipped" />

    <ImageView
        android:id="@+id/deckCard2"
        android:layout_width="91dp"
        android:layout_height="60dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="225dp"
        android:layout_marginEnd="599dp"
        android:layout_marginBottom="142dp"
        android:layout_weight="1"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/blue_flipped" />

    <ImageView
        android:id="@+id/deckCard3"
        android:layout_width="91dp"
        android:layout_height="60dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="225dp"
        android:layout_marginEnd="591dp"
        android:layout_marginBottom="142dp"
        android:layout_weight="1"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/blue_flipped" />

    <LinearLayout
        android:id="@+id/layoutUserCards"
        android:layout_width="650dp"
        android:layout_height="120dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="287dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/custom_border"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/containerUserCards"
            android:layout_width="60dp"
            android:layout_height="91dp"
            android:layout_gravity="center"
            android:orientation="horizontal" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/scoreBoard"
        android:layout_width="130dp"
        android:layout_height="78dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="207dp"
        android:layout_marginEnd="451dp"
        android:layout_marginBottom="126dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textDealerScore"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="57dp"
            android:shadowColor="@color/default_text_color"
            android:text="@string/text_dealer_score"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textUserScore"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="39dp"
            android:shadowColor="@color/default_text_color"
            android:text="@string/text_user_score"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textUserBet"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="39dp"
            android:layout_marginBottom="21dp"
            android:shadowColor="@color/default_text_color"
            android:text="@string/text_user_bet"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textUserBalance"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="57dp"
            android:layout_marginBottom="3dp"
            android:shadowColor="@color/default_text_color"
            android:text="@string/text_user_balance"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btnHit"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="500dp"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="132dp"
        android:text="@string/btn_hit"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnStand"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="601dp"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="132dp"
        android:text="@string/btn_stand"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layoutChips"
        android:layout_width="208dp"
        android:layout_height="42dp"
        android:layout_marginStart="491dp"
        android:layout_marginTop="218dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="167dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imageBtnBlue"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:contentDescription="@string/todo"
            app:srcCompat="@drawable/token_blue" />

        <ImageButton
            android:id="@+id/imageBtnGreen"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:contentDescription="@string/todo"
            app:srcCompat="@drawable/token_green" />

        <ImageButton
            android:id="@+id/imageBtnRed"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:contentDescription="@string/todo"
            app:srcCompat="@drawable/token_red" />

        <ImageButton
            android:id="@+id/imageBtnBlack"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:contentDescription="@string/todo"
            app:srcCompat="@drawable/token_black" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>