<resources>
    <!-- Base application theme. -->
    <style name="Theme.App_blackjack" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/default_tool_bar_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">true</item>

        <!-- Customize your theme here. -->
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="Theme.App_blackjack.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.App_blackjack.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.App_blackjack.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>