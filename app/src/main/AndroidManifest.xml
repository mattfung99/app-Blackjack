<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.app_blackjack">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> <!-- Permission to use camera -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.App_blackjack">
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/main_activity_name"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.App_blackjack">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.OptionsActivity"
            android:label="@string/options_activity_name"
            android:parentActivityName=".ui.MainActivity"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.App_blackjack" />
        <activity
            android:name=".ui.UserLoginActivity"
            android:label="@string/login_activity_name"
            android:parentActivityName=".ui.MainActivity"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.App_blackjack" />
        <activity
            android:name=".ui.CreateUserActivity"
            android:label="@string/create_user_activity_name"
            android:parentActivityName=".ui.MainActivity"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.App_blackjack" />
        <activity
            android:name=".ui.ViewProfileActivity"
            android:label="@string/view_profile_activity_name"
            android:parentActivityName=".ui.MainActivity"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.App_blackjack" />
        <activity
            android:name=".ui.GameActivity"
            android:label="@string/game_activity_name"
            android:parentActivityName=".ui.MainActivity"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.App_blackjack" />

        <!-- Prototype -->
        <activity
            android:name=".prototype.DeckTesterActivity"
            android:label="@string/deck_tester_activity_name"
            android:parentActivityName=".ui.MainActivity"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.App_blackjack" />
        <activity
            android:name=".prototype.GameTesterActivity"
            android:label="@string/game_tester_activity_name"
            android:parentActivityName=".ui.MainActivity"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.App_blackjack" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>